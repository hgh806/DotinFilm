<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/film_image"
        android:layout_width="240.dp"
        android:layout_height="320.dp"
        android:contentDescription="@string/film_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/like_image"
        android:layout_width="41.dp"
        android:layout_height="41.dp"
        android:layout_margin="16.dp"
        android:contentDescription="@string/film_image"
        app:layout_constraintTop_toTopOf="@id/film_image"
        app:layout_constraintEnd_toEndOf="@id/film_image"/>

    <TextView
        android:id="@+id/film_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_marginTop="8.dp"
        app:layout_constraintEnd_toEndOf="@+id/film_image"
        app:layout_constraintTop_toBottomOf="@+id/film_image" />
</androidx.constraintlayout.widget.ConstraintLayout>